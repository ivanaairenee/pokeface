<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ECEFF1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="100dp">
                        <ImageView
                            android:id="@+id/pokemon_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                            android:padding="48dp"/>
                        <TextView
                            android:id="@+id/pokemon_name"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pokemon_image"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="8dp"
                            android:padding="8dp"
                            android:lineSpacingExtra="8dp"
                            android:text="pokemon_name_placeholder"
                            android:fontFamily="@font/pixelated"/>
                        <TextView
                            android:id="@+id/pokemon_type"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pokemon_name"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="8dp"
                            android:textStyle="bold"
                            android:padding="8dp"
                            android:lineSpacingExtra="8dp"
                            android:text="type_placeholder"
                            android:fontFamily="@font/pixelated"/>
                        <TextView
                            android:id="@+id/pokemon_abilities"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pokemon_type"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="8dp"
                            android:textStyle="bold"
                            android:padding="8dp"
                            android:lineSpacingExtra="8dp"
                            android:text="abilities_placeholder"
                            android:fontFamily="@font/pixelated"/>
                        <TextView
                            android:id="@+id/pokemon_weaknesses"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pokemon_abilities"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="8dp"
                            android:textStyle="bold"
                            android:padding="8dp"
                            android:lineSpacingExtra="8dp"
                            android:text="weaknesses_placeholder"
                            android:fontFamily="@font/pixelated"/>
                        <Button
                            android:id="@+id/catch_pokemon_button"
                            android:layout_width="match_parent"
                            android:text="@string/catch_pokemon_text"
                            android:layout_below="@+id/pokemon_weaknesses"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="24dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@color/red"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:fontFamily="@font/pixelated"/>
                    </RelativeLayout>
                </LinearLayout>
        </ScrollView>
        <fragment
            android:name="id.ac.ui.cs.mobileprogramming.ivanairenethomas.pokeface.BottomNavigationFragment"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</FrameLayout>